<h1><%= @list.name %> content</h1>
<% @list.bookmarks.each do |bookmark| %>
<div>
  <p><%= bookmark.comment %></p>
  <p><%= bookmark.movie.title %></p>
  <p><%= link_to "Delete this bookmark", bookmark_path(bookmark),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} , class: "btn btn-danger"%></p>
      <hr>
</div>

<% end %>


<%= link_to "Add a bookmark", new_list_bookmark_path(@list), class: "btn btn-success" %>
